{
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"],
    "no-eval": ["error"],
    "no-implied-eval": ["error"],
    "prefer-const": ["warn"],
    "no-var": ["warn"]
  }
}
